<section class="top-space-margin half-section bg-gradient-very-light-gray">
    <div class="container">
        <div class="row align-items-center justify-content-center"
             data-anime="{ &quot;el&quot;: &quot;childs&quot;, &quot;translateY&quot;: [-15, 0], &quot;opacity&quot;: [0,1], &quot;duration&quot;: 300, &quot;delay&quot;: 0, &quot;staggervalue&quot;: 200, &quot;easing&quot;: &quot;easeOutQuad&quot; }">
            <div class="col-12 col-xl-8 col-lg-10 text-center position-relative page-title-extra-large">
                <h1 class="alt-font fw-600 text-dark-gray mb-10px">Banking Detail</h1>
            </div>
            <div class="col-12 breadcrumb breadcrumb-style-01 d-flex justify-content-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>Card</li>
                </ul>
            </div>
        </div>
    </div>
</section>


<section class="pt-0">
    <div class="container">
        <div class="row g-0 d-flex justify-content-center align-items-center">
            <div class="col-lg-6 col-md-10 p-6 box-shadow-extra-large border-radius-6px justify-content-center"
                 data-anime="{ &quot;translateY&quot;: [0, 0], &quot;opacity&quot;: [0,1], &quot;duration&quot;: 600, &quot;delay&quot;:150, &quot;staggervalue&quot;: 150, &quot;easing&quot;: &quot;easeOutQuad&quot; }">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row justify-content-center">
                            <h3 class="text-center fs-26 xs-fs-24 alt-font fw-400 text-dark-gray mb-20px d-block">Payment Details</h3>
                            <img class="img-responsive cc-img  align-items-center" src="https://www.prepbootstrap.com/Content/images/shared/misc/creditcardicons.png" style="width: 350px;">
                        </div>
                    </div>
                    <div class="panel-body mt-5">
                        <form role="form">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label class="text-dark-gray mb-10px fw-500">
                                            CARD NUMBER
                                        </label>
                                        <input class="mb-20px bg-very-light-gray form-control required" type="number"
                                               placeholder="Valid Card Number" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6 col-md-6">
                                    <div class="form-group">
                                        <label class="text-dark-gray mb-10px fw-500">
                                            <span class="hidden-xs">EXPIRATION</span>
                                            DATE
                                        </label>
                                        <input class="mb-20px bg-very-light-gray form-control required" type="number" placeholder="MM / YY" />
                                    </div>
                                </div>
                                <div class="col-xs-6 col-md-6">
                                    <div class="form-group">
                                        <label class="text-dark-gray mb-10px fw-500">
                                            CV CODE
                                        </label>
                                        <input class="mb-20px bg-very-light-gray form-control required" type="number" placeholder="CVC">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label class="text-dark-gray mb-10px fw-500">
                                            CARD OWNER
                                        </label>
                                        <input class="mb-20px bg-very-light-gray form-control required" type="number"
                                               placeholder="Card Owner Names" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <button class="btn btn-medium btn-round-edge btn-dark-gray btn-box-shadow submit w-100 mt-5" type="submit" style="font-size: 20px; font-weight: 0;">Process Payment</button>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
